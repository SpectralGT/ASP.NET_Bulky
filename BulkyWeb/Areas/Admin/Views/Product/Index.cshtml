@model List<Product>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Product
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">

        <thead>

            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>ISBN</th>
                <th>List Price</th>
                <th>Price</th>
                <th>Price50</th>
                <th>Price100</th>

                <th></th>
            </tr>
        </thead>
            
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Description</td>
                    <td>@obj.ISBN</td>
                    <td>@obj.ListPrice</td>
                    <td>@obj.Price</td>
                    <td>@obj.Price50</td>
                    <td>@obj.Price100</td>
                    <td>

                        <div class="float-end" role="group">
                            <a asp-controller="Product" asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-outline-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>